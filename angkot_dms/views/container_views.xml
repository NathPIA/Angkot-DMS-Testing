<?xml version="1.0"?>
<odoo>
    <record id="view_container_tree" model="ir.ui.view">
        <field name="name">angkot.container.tree</field>
        <field name="model">angkot.container</field>
        <field name="arch" type="xml">
            <tree>
                <field name="container_number"/>
                <field name="size_type"/>
                <field name="status"/>
                <field name="shipping_line_id"/>
                <field name="booking_no"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_container_form" model="ir.ui.view">
        <field name="name">angkot.container.form</field>
        <field name="model">angkot.container</field>
        <field name="arch" type="xml">
            <form string="Container">
                <sheet>
                    <group>
                        <field name="container_number"/>
                        <field name="size_type"/>
                        <field name="status"/>
                        <field name="shipping_line_id"/>
                        <field name="booking_no"/>
                        <field name="seal_no"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Gate Transactions">
                            <field name="gate_transaction_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="service_type"/>
                                    <field name="state"/>
                                    <field name="gate_in_datetime"/>
                                    <field name="gate_out_datetime"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
