<?xml version="1.0"?>
<odoo>
    <record id="view_yard_location_tree" model="ir.ui.view">
        <field name="name">angkot.yard.location.tree</field>
        <field name="model">angkot.yard.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="location_type"/>
                <field name="parent_id"/>
                <field name="capacity"/>
                <field name="current_container_count"/>
                <field name="allowed_size"/>
            </tree>
        </field>
    </record>

    <record id="view_yard_location_form" model="ir.ui.view">
        <field name="name">angkot.yard.location.form</field>
        <field name="model">angkot.yard.location</field>
        <field name="arch" type="xml">
            <form string="Yard Location">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="location_type"/>
                        <field name="parent_id"/>
                        <field name="capacity"/>
                        <field name="allowed_size"/>
                        <field name="sequence"/>
                    </group>
                    <notebook>
                        <page string="Children">
                            <field name="child_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="location_type"/>
                                    <field name="capacity"/>
                                    <field name="allowed_size"/>
                                    <field name="sequence"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Gate Transactions">
                            <field name="gate_transaction_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="container_id"/>
                                    <field name="service_type"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
